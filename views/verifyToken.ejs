<% include ./partials/success-error-mess %>
<body  style="background-image: url('../assets/background2.jpg');  max-width: 100%">
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body border border-danger">
            <h4 class="text-center mb-3">
                <img src="../assets/424736_final_ver.jpg" width="100" height="100" class="d-inline-block rounded-circle" alt="" ></i> Account Verification
            </h4>
            <% include ./partials/messages %>
            <div class="card" id="loginCard">
                <div class="col-md-4">
                    <img  class="img-fluid rounded-start"
                    src="https://thumbor.forbes.com/thumbor/fit-in/900x510/https://www.forbes.com/advisor/wp-content/uploads/2021/03/pit-bull-featured.jpg" alt="Hansome Pitbull Dog">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <% include ./partials/messages %>
                        <h5 class="card-title">Email Verification</h5>
                        <div class="container tokenForm">
                            <div class="row">
                                <div class="col-md-6 col-md-offset-3">
                                    <form class="form-token">
                                        <div class="form-group">
                                            <label for="secretToken">
                                                <h5 style="color:blue;">Paste Secret Token Below
                                                </h5>
                                            </label>
                                            <input 
                                                type="text" 
                                                class="form-control input"
                                                id="secretToken"
                                                oninput="this.style.width = ((this.value.length + 1) * 8) + 'px';"
                                                placeholder="Paste Secret Token Here" required
                                                autofocus>
                                            <p>You Entered:</p>
                                            <input 
                                                id="secretTokenbox"
                                                onblur="this.style.width = ((this.value.length + 1) * 8) + 'px';"
                                                class="input-wrap input"
                                                type="text" 
                                                value="<%= typeof secretToken != 'undefined' ? secretToken : '' %>">
                                        </div>
                                        <br>
                                        <!-- Modal Trigger -->
                                        <button type="submit" data-bs-target="#verifyTokenModal"
                                            class="btn btn-danger btn-block hoverable modal-trigger"
                                            data-bs-toggle="modal"
                                            id="verifyTokenBtn"><i class="fa-solid fa-circle-check" aria-hidden="true"></i>Verify</button> 
                                    </form>
                                    <br />
                                    <a class="btn btn-primary hoverable" href="/users/login" role="button">Login</a>
                                    <a class="btn btn-primary hoverable" href="/users/register" role="button">Or Sign Up Here</a>
                                </div>
                                <div id="verified-token-modal" class="modal">
                                    <div class="modal-content">
                                        <h4>Confirmation</h4>
                                        <div class="modal-header">
                                            <h6> You have Verified this email address.</h6>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
             <!-- Modal -->
            <div class="modal fade" id="verifyTokenModal" tabindex="-1" aria-labelledby="verifyTokenBtnLabel" aria-hidden="true">
                <div class="modal-dialog">
                <div class="modal-content">
                    <form action="/users/login" method="GET">
                    <div class="modal-header">
                        <h5 class="modal-title" id="eMailModalLabel">Email Confirmation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <% include ./partials/messages %>
                        <p>This email address has been confirmed.</p>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-default green darken-4" href="/users/login"
                            id="confirm-token">Login to TPBWaitlist</button>
                        <button type="submit"
                            class="btn btn-default red darken-4"
                            id="cancel">CANCEL</button>                        
                    </div>
                    </form>
                </div>
                </div>
            </div>
        </div>    
    </div>
</div>
<% include ./partials/footer.ejs %>
