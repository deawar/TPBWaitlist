                    </select>
                </div>
                <div class="form-group">
                    <label for="Geocode">Geocode for this address</label>
                    <input 
                        type="text"
                        id="geocode"
                        name="geocode"
                        class="form-control"
                        placeholder="x: coordinates, y: coordinates"                        
                        value="<%= typeof geocode != 'undefined' ? geocode : '' %>"
                        readonly
                    />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input 
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Enter Email"
                        autocomplete="email" 
                        autofocus 
                        required
                        value="<%= typeof email != 'undefined' ? email : '' %>"
                    />
                </div>
                <div class="form-group" id="allpets">
                    <label for="petsNumber">Number of Pets</label>
