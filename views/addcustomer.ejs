                    </select>
                <div id="Info"></div>
                </div>
                <div class="form-group">
                    <label for="preferred_days">Preferred Days</label>
                    <select 
                        type="text"
                        id="preferred_days" 
                        name="preferred_days"
                        class="form-control"
                        autofocus 
                        autocomplete="preferred_days" 
                        required
                        multiple
                        onChange="";>
